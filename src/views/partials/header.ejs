<header>
  <div class="container">
    <div class="header">
      <div class="flex-align-items-center">
        <img src="/img/logofinal.png" width="40px" />
        <h1 class="text-logo flex-align-items-center">MD CheatSheets</h1>
      </div>
      <nav>
        <ul>
          <li>
            <a href="/" class="icon-nav-link">
              <i class="fa fa-home"></i>
            </a>
          </li>
          <% if (!credenciales.isLogged) { %>
            <li>
              <a href="/signin" class="icon-nav-link">
                <i class="fa fa-user"></i>
              </a>
            </li>
          <% } %>
          <% if (credenciales.isLogged) {%>
          <li>
            <div class="dropdown">
              <a href="#"class="icon-nav-link dropbtn">
                <i class="fa fa-user-circle"></i>
              </a>
              <div class="dropdown-content">
                <% if (credenciales.access === 1) {%>
                <a href="/add"><i class="fa fa-plus"></i> Nuevo Documento</a>
                <a href="/estilos"><i class="fa fa-paperclip"></i> Estilos</a>
                <a href="/category"><i class="fa fa-bookmark"></i> Categorías</a>
                <hr>
                <% } %>
                <a href="#" id="cerrarSession"><i class="fa fa-power-off"></i> Cerrar sesión</a>
              </div>
            </div> 
          </li>
          <% } %>
        </ul>
      </nav>
    </div>
  </div>
  <div class="buscar" id="buscador">
    <div class="buscar-formulario">
      <input type="text" class="buscador-header-input" />
      <a href="#" class="btn azul"><i class="fa fa-search"></i></a>
      <a href="#" class="btn rojo mb-0" id="cerrar-buscador"
        ><i class="fa fa-times"></i
      ></a>
    </div>
  </div>
</header>
